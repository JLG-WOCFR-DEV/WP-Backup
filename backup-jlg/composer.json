{
    "name": "jlg/backup-jlg",
    "description": "Une solution complÃ¨te de sauvegarde, restauration et gestion pour WordPress.",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "version": "2.0.0",
    "authors": [
        {
            "name": "JLG",
            "email": "contact@jlg.dev"
        }
    ],
    "require": {
        "php": ">=7.4",
        "google/apiclient": "^2.12"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "BJLG\\": "includes/"
        }
    },
    "config": {
        "vendor-dir": "vendor-bjlg",
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit",
        "cs": "phpcs --standard=WordPress",
        "cs-fix": "phpcbf --standard=WordPress"
    }
}